pipeline {
    agent any
    
    environment {
        DOCKER_CREDENTIALS_ID = 'docker-hub-credentials'
        DOCKER_IMAGE_NAME = 'your-docker-username/your-docker-image'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE_NAME}:${env.BUILD_NUMBER}")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: "${DOCKER_CREDENTIALS_ID}", usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                        docker.withRegistry('https://index.docker.io/v1/', "${DOCKER_USERNAME}", "${DOCKER_PASSWORD}") {
                            docker.image("${DOCKER_IMAGE_NAME}:${env.BUILD_NUMBER}").push()
                        }
                    }
                }
            }
        }

        stage('Deploy to EC2') {
            steps {
                script {
                    // Your deployment steps here, e.g., using SSH or Jenkins EC2 Plugin
                    // Example:
                    // sshagent(credentials: ['your-ssh-key-id']) {
                    //     sh 'ssh user@ec2-instance-ip "docker pull ${DOCKER_IMAGE_NAME}:${env.BUILD_NUMBER}"'
                    //     sh 'ssh user@ec2-instance-ip "docker run -d -p 80:80 ${DOCKER_IMAGE_NAME}:${env.BUILD_NUMBER}"'
                    // }
                }
            }
        }
    }

    post {
        success {
            echo 'Build and deployment successful!'
        }
        failure {
            echo 'Build or deployment failed!'
        }
    }
}
